<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Игра в Кости</TextBlock>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="DieText1" Width="100" Height="100" Margin="10"/>
            <TextBlock Name="DieText2" Width="100" Height="100" Margin="10"/>
            <TextBlock Name="DieText3" Width="100" Height="100" Margin="10"/>
        </StackPanel>

        <Button Name="RollButton" Content="Бросить кости" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,309,0,0" Click="RollButton_Click"/>

        <TextBlock Name="ResultTextBlock" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
        <TextBlock Name="BalanceTextBlock" HorizontalAlignment="Left" Margin="36,74,0,0" TextWrapping="Wrap" Text="Баланс:" VerticalAlignment="Top" Height="37" Width="76"/>
        

    </Grid>
</Window>
